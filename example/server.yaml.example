# paqet server default profile (fast2 + memory-safe baseline)
# Replace IP/router_mac/key for your environment.
role: "server"

log:
  level: "warn"

debug:
  pprof: "127.0.0.1:6060"
  diag: true

listen:
  addr: ":9999"

network:
  interface: "eth0"
  dscp: 0
  ipv4:
    addr: "10.0.0.100:9999"
    router_mac: "aa:bb:cc:dd:ee:ff"
  pcap:
    sockbuf: 16777216
    snaplen: 65535
    promisc: false
    immediate: false
    timeout_ms: 5

transport:
  protocol: "kcp"
  conn: 2
  kcp:
    mode: "fast2"
    mtu: 1350
    rcvwnd: 1024
    sndwnd: 1024
    block: "aes-128-gcm"
    key: "your-secret-key-here"
    guard: true
    guard_magic: "PQT1"
    guard_window: 30
    guard_skew: 1
    max_sessions: 512
    max_streams_total: 4096
    max_streams_per_session: 256
    header_timeout: 10
    smuxbuf: 2097152
    streambuf: 131072
